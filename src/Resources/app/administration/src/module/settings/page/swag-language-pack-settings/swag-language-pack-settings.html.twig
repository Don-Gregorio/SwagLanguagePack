{% block swag_language_pack_settings %}
    <sw-page>

        {% block swag_language_pack_settings_header %}
            <template #smart-bar-header>
                <h2>
                    {{ $tc('sw-settings.index.title') }}
                    <sw-icon name="small-arrow-medium-right" small></sw-icon>
                    {{ $tc('swag-language-pack.settings.header') }}
                </h2>
            </template>
        {% endblock %}

        {% block swag_language_pack_settings_actions %}
            <template #smart-bar-actions>

                {% block swag_language_pack_settings_actions_save %}
                    <sw-button-process
                            class="swag-language-pack-settings__save-action"
                            variant="primary"
                            :processSuccess="isSaveSuccessful"
{#                            ToDo LAN-28 - Implement ACL #}
{#                            :disabled="!acl.can('swag_language_pack_language.editor')" #}
                            @process-finish="onSaveFinish"
                            @click="onSave">
                        {{ $tc('global.default.save') }}
                    </sw-button-process>
                {% endblock %}

            </template>
        {% endblock %}

        {% block swag_language_pack_settings_content %}
            <template #content>

                {% block swag_language_pack_settings_content_card_view %}
                    <sw-card-view>

                        {% block swag_language_pack_settings_content_card_view_language_selection %}
                            <sw-card :title="$tc('swag-language-pack.settings.card.title')"
                                     :disabled="isLoading">

                                {% block swag_language_pack_settings_content_card_view_card_loader %}
                                    <sw-loader v-if="isLoading"></sw-loader>
                                {% endblock %}

                                {% block swag_language_pack_settings_content_card_view_language_selection_languages %}
                                    <template v-for="packLanguage in packLanguages">

                                        {% block swag_language_pack_settings_content_card_view_language_selection_language %}
                                            <swag-pack-language-entry
                                                    :value="packLanguage"
                                                    field="administrationActive"
                                                    :label="packLanguage.language.name"
                                                    :description="packLanguage.language.locale.code"
                                                    :flagLocale="packLanguage.language.locale.code">
                                            </swag-pack-language-entry>
                                        {% endblock %}

                                    </template>
                                {% endblock %}

                            </sw-card>
                        {% endblock %}

                    </sw-card-view>
                {% endblock %}

            </template>
        {% endblock %}

    </sw-page>
{% endblock %}
